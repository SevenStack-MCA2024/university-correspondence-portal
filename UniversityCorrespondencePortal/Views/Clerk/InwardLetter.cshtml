@model List<UniversityCorrespondencePortal.Models.ViewModels.InwardLetterViewModel>

@{
    ViewBag.Title = "Inward Letters";
    Layout = "~/Views/Shared/_ClerkLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex flex-wrap gap-2">
            <input type="text" id="searchInput" class="form-control d-inline w-auto" placeholder="Search..." />

            <select id="filterStatus" class="form-control d-inline w-auto">
                <option value="">Status</option>
                <option>Pending</option>
                <option>Completed</option>
            </select>

            <select id="filterSenderDept" class="form-control d-inline w-auto">
                <option value="">Sender Department</option>
                @foreach (var dept in Model.Select(m => m.SenderDepartment).Distinct())
                {
                    <option value="@dept">@dept</option>
                }
            </select>

            <select id="filterStaff" class="form-control d-inline w-auto">
                <option value="">Staff</option>
                @foreach (var staff in Model.Select(m => m.StaffName).Distinct())
                {
                    <option value="@staff">@staff</option>
                }
            </select>

            <input type="datetime-local" id="fromDateTime" class="form-control d-inline w-auto" placeholder="From DateTime" />
            <input type="datetime-local" id="toDateTime" class="form-control d-inline w-auto" placeholder="To DateTime" />
        </div>

        <a href="@Url.Action("Add", "InwardLetter")" class="btn btn-primary">Add Letter</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Inward No</th>
                <th>Date</th>
                <th>Time</th>
                <th>Sender Department</th>
                <th>Status</th>
                <th>Allotted Staff</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="letterTableBody">
            @foreach (var letter in Model)
            {
                <tr>
                    <td>@letter.InwardNumber</td>
                    <td>@(letter.DateReceived?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                    <td>@(letter.TimeReceived?.ToString(@"hh\:mm") ?? "N/A")</td>
                    <td>@letter.SenderDepartment</td>
                    <td>@letter.Status</td>
                    <td>@letter.StaffName</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-secondary" data-bs-toggle="modal" data-bs-target="#viewModal_@letter.LetterID">View</button>
                    </td>
                </tr>

                <!-- View Modal -->
                <div class="modal fade" id="viewModal_@letter.LetterID" tabindex="-1" aria-labelledby="viewModalLabel_@letter.LetterID" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Letter Details - @letter.InwardNumber</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <dl class="row">
                                    <dt class="col-sm-4">Outward Number</dt>
                                    <dd class="col-sm-8">@letter.OutwardNumber</dd>

                                    <dt class="col-sm-4">Delivery Mode</dt>
                                    <dd class="col-sm-8">@letter.DeliveryMode</dd>

                                    <dt class="col-sm-4">Sender Name</dt>
                                    <dd class="col-sm-8">@letter.SenderName</dd>

                                    <dt class="col-sm-4">Sender Department</dt>
                                    <dd class="col-sm-8">@letter.SenderDepartment</dd>

                                    <dt class="col-sm-4">Reference ID</dt>
                                    <dd class="col-sm-8">@letter.ReferenceID</dd>

                                    <dt class="col-sm-4">Subject</dt>
                                    <dd class="col-sm-8">@letter.Subject</dd>

                                    <dt class="col-sm-4">Remarks</dt>
                                    <dd class="col-sm-8">@letter.Remarks</dd>

                                    <dt class="col-sm-4">Priority</dt>
                                    <dd class="col-sm-8">@letter.Priority</dd>

                                    <dt class="col-sm-4">Receiver Department</dt>
                                    <dd class="col-sm-8">@letter.ReceiverDepartment</dd>

                                    <dt class="col-sm-4">Date Received</dt>
                                    <dd class="col-sm-8">@letter.DateReceived?.ToString("yyyy-MM-dd")</dd>

                                    <dt class="col-sm-4">Time Received</dt>
                                    <dd class="col-sm-8">@letter.TimeReceived?.ToString("hh\:mm")</dd>

                                    <dt class="col-sm-4">Status</dt>
                                    <dd class="col-sm-8">@letter.Status</dd>

                                    <dt class="col-sm-4">Allotted Staff</dt>
                                    <dd class="col-sm-8">@letter.StaffName</dd>
                                </dl>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {

            function applyFilters() {
                var search = $('#searchInput').val().toLowerCase();
                var status = $('#filterStatus').val().toLowerCase();
                var dept = $('#filterSenderDept').val().toLowerCase();
                var staff = $('#filterStaff').val().toLowerCase();
                var fromDateTime = $('#fromDateTime').val();
                var toDateTime = $('#toDateTime').val();

                $('#letterTableBody tr').each(function () {
                    var row = $(this);
                    var rowText = row.text().toLowerCase();
                    var rowDateText = row.find('td:nth-child(2)').text().trim();
                    var rowStatus = row.find('td:nth-child(5)').text().toLowerCase();
                    var rowDept = row.find('td:nth-child(4)').text().toLowerCase();
                    var rowStaff = row.find('td:nth-child(6)').text().toLowerCase();

                    var match = true;

                    var rowDateTime = new Date(rowDateText);
                    var fromDate = fromDateTime ? new Date(fromDateTime) : null;
                    var toDate = toDateTime ? new Date(toDateTime) : null;

                    if (search && !rowText.includes(search)) match = false;
                    if (status && !rowStatus.includes(status)) match = false;
                    if (dept && !rowDept.includes(dept)) match = false;
                    if (staff && !rowStaff.includes(staff)) match = false;
                    if (fromDate && rowDateTime < fromDate) match = false;
                    if (toDate && rowDateTime > toDate) match = false;

                    row.toggle(match);
                });
            }

            $('#searchInput, #filterStatus, #filterSenderDept, #filterStaff, #fromDateTime, #toDateTime').on('input change', function () {
                applyFilters();
            });
        });
    </script>
}
