@model UniversityCorrespondencePortal.Models.Clerk

@{
    ViewBag.Title = "Clerk Profile";
    Layout = "~/Views/Shared/_ClerkLayout.cshtml";
}

<div class="container mt-4">
    <h2>👤 Clerk Profile</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card p-4">
        <table class="table table-bordered">
            <tr>
                <th>Clerk ID</th>
                <td>@Model.ClerkID</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>@ViewBag.DepartmentName</td>
            </tr>
        </table>

        <div class="text-end">
            <a href="@Url.Action("Index", "Report")" class="btn btn-secondary">⬅ Back to Home Page</a>
        </div>
    </div>
</div>