@model UniversityCorrespondencePortal.Models.Clerk

@{
    ViewBag.Title = "Clerk Profile";
    Layout = "~/Views/Shared/_ClerkLayout.cshtml";
}

<div class="container mt-4">
    <h2>👤 Clerk Profile</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @using (Html.BeginForm("Profile", "Clerk", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card p-3">
            @Html.HiddenFor(m => m.PasswordHash) <!-- keep original password hash hidden -->

            <div class="form-group">
                @Html.LabelFor(m => m.ClerkID)
                @Html.TextBoxFor(m => m.ClerkID, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Phone)
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Department")
                @Html.DropDownListFor(m => m.DepartmentID, ViewBag.Departments as SelectList, "-- Select Department --", new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("New Password (optional)")
                <input type="password" name="NewPassword" class="form-control" placeholder="Leave blank to keep current password" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">💾 Save Changes</button>
                <a href="@Url.Action("Index", "Letter")" class="btn btn-secondary">⬅ Back to Home Page</a>
            </div>
        </div>
    }
</div>
