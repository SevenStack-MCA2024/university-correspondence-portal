@{
    ViewBag.Title = "Staff Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-container {
        max-width: 500px;
        margin: 80px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.8s ease-in-out;
    }

        .login-container h2 {
            font-weight: 600;
            font-size: 28px;
            color: #004080;
            margin-bottom: 25px;
        }

    .form-label {
        font-weight: 500;
        color: #333;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px 12px;
        font-size: 15px;
    }

    .btn-login {
        background-color: #004080;
        color: white;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-login:hover {
            background-color: #002b5c;
        }

    .modal-content {
        border-radius: 12px;
    }

    .modal-title {
        font-weight: 600;
        color: #004080;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .forgot-link {
        display: block;
        margin-top: 15px;
        font-size: 14px;
        color: #004080;
    }

        .forgot-link:hover {
            text-decoration: underline;
        }
</style>

<div class="login-container">
    <h2 class="text-center">🔐 Staff Login</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @using (Html.BeginForm("Login", "Staff", FormMethod.Post))
    {
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-login w-100">Login</button>
    }

    <a href="#" class="text-center forgot-link" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">
        Forgot Password?
    </a>
</div>

<!-- Forgot Password Modal -->
<div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Forgot Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Step 1: Enter Email -->
                <div id="step1">
                    <label for="forgotEmail" class="form-label">Enter your registered email:</label>
                    <input type="email" id="forgotEmail" class="form-control mb-3" />
                    <button id="sendOtpBtn" class="btn btn-primary w-100">Send OTP</button>
                </div>

                <!-- Step 2: Enter OTP -->
                <div id="step2" style="display:none;">
                    <label for="otpInput" class="form-label">Enter OTP:</label>
                    <input type="text" id="otpInput" class="form-control mb-3" />
                    <button id="verifyOtpBtn" class="btn btn-success w-100">Verify OTP</button>
                </div>

                <!-- Step 3: Enter New Password -->
                <div id="step3" style="display:none;">
                    <label for="newPassword" class="form-label">Enter New Password:</label>
                    <input type="password" id="newPassword" class="form-control mb-3" />
                    <button id="updatePasswordBtn" class="btn btn-success w-100">Update Password</button>
                </div>

                <div id="forgotError" class="text-danger mt-2"></div>
                <div id="forgotSuccess" class="text-success mt-2"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        var currentEmail = "";

        $("#sendOtpBtn").click(function () {
            currentEmail = $("#forgotEmail").val();
            if (currentEmail === "") {
                $("#forgotError").text("Please enter your email.");
                return;
            }
            $.post("/Staff/SendOtp", { email: currentEmail }, function (res) {
                if (res.success) {
                    $("#step1").hide();
                    $("#step2").show();
                    $("#forgotError").text("");
                    $("#forgotSuccess").text("OTP sent to your email.");
                } else {
                    $("#forgotError").text(res.message);
                }
            });
        });

        $("#verifyOtpBtn").click(function () {
            var otp = $("#otpInput").val();
            if (otp === "") {
                $("#forgotError").text("Please enter OTP.");
                return;
            }
            $.post("/Staff/VerifyOtp", { email: currentEmail, otp: otp }, function (res) {
                if (res.success) {
                    $("#step2").hide();
                    $("#step3").show();
                    $("#forgotError").text("");
                    $("#forgotSuccess").text("OTP verified. Enter new password.");
                } else {
                    $("#forgotError").text(res.message);
                }
            });
        });

        $("#updatePasswordBtn").click(function () {
            var newPassword = $("#newPassword").val();
            if (newPassword === "") {
                $("#forgotError").text("Please enter a new password.");
                return;
            }
            $.post("/Staff/UpdatePassword", { email: currentEmail, password: newPassword }, function (res) {
                if (res.success) {
                    $("#forgotError").text("");
                    $("#forgotSuccess").text("Password updated successfully. You can now login.");
                    setTimeout(function () {
                        location.reload();
                    }, 2000);
                } else {
                    $("#forgotError").text(res.message);
                }
            });
        });
    </script>
}
