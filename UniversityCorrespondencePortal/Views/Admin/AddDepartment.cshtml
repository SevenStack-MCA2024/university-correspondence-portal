@model List<UniversityCorrespondencePortal.Models.Department>

@{
    ViewBag.Title = "Add Department";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string search = ViewBag.Search as string ?? "";
    string editId = TempData["EditID"] as string ?? "";
    string filter = ViewBag.Filter as string ?? "All";
}

@Html.AntiForgeryToken()

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="d-flex flex-column" style="height: 100%; max-height: 80vh;">
    <h2 class="mb-3">Department Management</h2>

    <!-- Filter/Search Section -->
    <div class="bg-light p-3 rounded shadow-sm mb-2" style="flex-shrink: 0;">
        <div class="row g-2 align-items-center">
            <div class="col-md-8 d-flex gap-2">
                <form method="get" class="d-flex flex-wrap gap-2 align-items-center">
                    <input type="text" name="search" value="@search" placeholder="Search by name or ID" class="form-control" style="min-width: 200px;" />
                    <select name="filter" class="form-select" style="min-width: 150px;">
                        <option value="All" @(filter == "All" ? "selected" : "")>All</option>
                        <option value="Active" @(filter == "Active" ? "selected" : "")>Active</option>
                        <option value="Inactive" @(filter == "Inactive" ? "selected" : "")>Inactive</option>
                    </select>
                    <button type="submit" class="btn btn-primary">Apply</button>
                </form>
            </div>
            <div class="col-md-4 text-end">
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addDepartmentModal">
                    + Add Department
                </button>
            </div>
        </div>
    </div>

    <!-- Table Container with Fixed Header and Scrollable Body -->
    <div class="border rounded" style="flex-grow: 1; min-height: 0; display: flex; flex-direction: column;">
        <div class="table-responsive" style="flex-grow: 1; overflow: auto;">
            <table class="table table-bordered table-hover m-0">
                <thead class="table-dark text-center" style="position: sticky; top: 0; z-index: 1;">
                    <tr>
                        <th style="width: 15%;">ID</th>
                        <th style="width: 25%;">Name</th>
                        <th style="width: 15%;">Code</th>
                        <th style="width: 15%;">Status</th>
                        <th style="width: 30%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var dept in Model)
                        {
                            if (dept.DepartmentID == editId)
                            {
                                <tr>
                                    <form method="post" action="@Url.Action("UpdateDepartment", "Admin")">
                                    <td>
                                        <input type="hidden" name="DepartmentID" value="@dept.DepartmentID" />
                                        @dept.DepartmentID
                                    </td>
                                    <td>
                                        <input type="text" name="DepartmentName" value="@dept.DepartmentName" class="form-control" required />
                                    </td>
                                    <td>
                                        <input type="text" name="DepartmentCode" value="@dept.DepartmentCode" class="form-control" maxlength="10" />
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-@(dept.IsActive ? "success" : "danger")">@((dept.IsActive ? "Active" : "Inactive"))</span>
                                    </td>
                                    <td class="text-center">
                                        <button type="submit" class="btn btn-sm btn-warning me-2">Save</button>
                                        <a href="@Url.Action("AddDepartment", "Admin")" class="btn btn-sm btn-secondary">Cancel</a>
                                    </td>
                                    </form>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td>@dept.DepartmentID</td>
                                    <td>@dept.DepartmentName</td>
                                    <td>@dept.DepartmentCode</td>
                                    <td class="text-center">
                                        <span class="badge bg-@(dept.IsActive ? "success" : "danger")">@((dept.IsActive ? "Active" : "Inactive"))</span>
                                    </td>
                                    <td class="text-center d-flex justify-content-center gap-2">
                                        <a href="@Url.Action("AddDepartment", "Admin", new { editId = dept.DepartmentID })" class="btn btn-sm btn-warning">Edit</a>

                                        <form method="post" action="@Url.Action("ToggleDepartmentStatus", "Admin")">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="departmentId" value="@dept.DepartmentID" />
                                            <button type="submit" class="btn btn-sm @(dept.IsActive ? "btn-danger" : "btn-success")">
                                                @(dept.IsActive ? "Deactivate" : "Activate")
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No departments found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal for Add Department -->
    <div class="modal fade" id="addDepartmentModal" tabindex="-1" aria-labelledby="addDepartmentLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" action="@Url.Action("AddDepartmentModal", "Admin")">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addDepartmentLabel">Add New Department</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group mb-3">
                            <label for="DepartmentID">Department ID</label>
                            <input type="text" class="form-control" id="DepartmentID" name="DepartmentID" required maxlength="10" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="DepartmentName">Department Name</label>
                            <input type="text" class="form-control" id="DepartmentName" name="DepartmentName" required maxlength="100" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="DepartmentCode">Department Code</label>
                            <input type="text" class="form-control" id="DepartmentCode" name="DepartmentCode" maxlength="10" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Department</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>