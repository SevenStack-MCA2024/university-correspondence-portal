<style>
    .about-header h2 {
        font-size: 32px;
        font-weight: 700;
        color: #004080;
    }

    .about-header p {
        font-size: 17px;
        font-weight: 500;
        color: #555;
    }

    .about-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .about-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
        }

    .card-title {
        font-size: 22px;
        font-weight: 600;
        color: #004080;
    }

    .card-subtitle {
        font-size: 15px;
        font-style: italic;
    }

    .about-btns .btn {
        border-radius: 50px;
        font-size: 16px;
    }

    .about-logo {
        height: 200px;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }
</style>

