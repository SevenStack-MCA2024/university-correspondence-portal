@{
    ViewBag.Title = "Home Page";
}

<style>
    .home-container {
        height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        animation: fadeInSlide 1s ease-out forwards;
        opacity: 0;
        transform: translateY(30px);
        flex-direction: column;
        text-align: center;
    }

    @@keyframes fadeInSlide {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .home-container h2 {
        font-size: 2rem;
        font-weight: 700;
        color: #004080;
        margin-bottom: 15px;
    }

    .logo-img {
        width: 250px; /* Increased size */
        height: auto;
        margin-bottom: 20px;
        border-radius: 30%;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

        .logo-img:hover {
            transform: scale(1.05);
        }


    .home-container p {
        font-size: 1.1rem;
        max-width: 600px;
        margin: 0 auto;
        color: #444;
        line-height: 1.6;
    }
</style>

<main class="home-container">
    <div class="text-center">
        <h2>Welcome to the University Correspondence Portal</h2>
        <img src="~/Content/logo3.png" alt="University Logo" class="logo-img" />
        </div>
</main>
