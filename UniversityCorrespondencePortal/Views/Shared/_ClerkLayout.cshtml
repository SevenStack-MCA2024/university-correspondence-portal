@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Clerk Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- ✅ jQuery (Must come before Bootstrap and other plugins) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- ✅ Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- ✅ Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
        }

        .layout-wrapper {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .layout-content {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
        }

        .layout-footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 10px 0;
        }
    </style>
</head>
<body>
    <div class="layout-wrapper">
        <!-- Header / Navbar -->
        <header class="d-flex justify-content-between align-items-center p-3 bg-success text-white">
            <div class="fw-bold">
                Welcome Clerk
            </div>
            <div>
                <a href="@Url.Action("Staff", "Clerk")" class="btn btn-outline-light me-2">Staff</a>
                <a href="@Url.Action("InwardLetters", "Clerk")" class="btn btn-outline-light me-2">InwardLetter</a>
                <a href="@Url.Action("OutwardLetter", "Clerk")" class="btn btn-outline-light me-2">OutwardLetter</a>
                <a href="@Url.Action("Report", "Clerk")" class="btn btn-outline-light me-2">Report</a>
                <a href="@Url.Action("Profile", "Clerk")" class="btn btn-outline-light me-2">Profile</a>
                <a href="@Url.Action("Logout", "Clerk")" class="btn btn-outline-light">Logout</a>
            </div>
        </header>

        <!-- Page Content -->
        <main class="layout-content container-fluid">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="layout-footer">
            © 2025 University Correspondence Portal | Clerk Dashboard
        </footer>
    </div>

    <!-- ✅ Scripts specific to views (e.g. Select2, Charts) will load here -->
    @RenderSection("Scripts", required: false)
</body>
</html>
