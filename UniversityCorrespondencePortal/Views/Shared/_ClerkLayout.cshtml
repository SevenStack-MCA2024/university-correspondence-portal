@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Clerk Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- ✅ Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <!-- ✅ jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- ✅ Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- ✅ Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
        }

        .layout-wrapper {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .layout-content {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
        }

        /* ✅ Footer Color */
        .layout-footer {
            background-color: #1B1F3B; /* Deep Navy Blue */
            color: white;
            text-align: center;
            padding: 10px 0;
        }

        /* ✅ Navbar Color */
        .navbar-edu {
            background-color: #3E64FF; /* Light Indigo */
            color: white;
        }

            .navbar-edu a.btn-outline-light {
                border-color: #ffffff;
                color: #ffffff;
            }

                .navbar-edu a.btn-outline-light:hover {
                    background-color: #ffffff;
                    color: #3E64FF;
                }
    </style>
</head>
<body>
    <div class="layout-wrapper">
        <!-- Header / Navbar -->
        <header class="navbar-edu d-flex justify-content-between align-items-center p-3">
            <div class="fw-bold text-white">
                Welcome Clerk
            </div>
            <div>
                <a href="@Url.Action("Staff", "Clerk")" class="btn btn-outline-light me-2">
                    <i class="fas fa-users"></i> Staff
                </a>
                <a href="@Url.Action("InwardLetters", "Clerk")" class="btn btn-outline-light me-2">
                    <i class="fas fa-envelope-open-text"></i> InwardLetter
                </a>
                <a href="@Url.Action("OutwardLetter", "Clerk")" class="btn btn-outline-light me-2">
                    <i class="fas fa-paper-plane"></i> OutwardLetter
                </a>
                <a href="@Url.Action("Report", "Clerk")" class="btn btn-outline-light me-2">
                    <i class="fas fa-chart-line"></i> Report
                </a>
                <a href="@Url.Action("Profile", "Clerk")" class="btn btn-outline-light me-2">
                    <i class="fas fa-user-circle"></i> Profile
                </a>
                <a href="@Url.Action("Logout", "Clerk")" class="btn btn-outline-light">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>

            </div>
        </header>

        <!-- Page Content -->
        <main class="layout-content container-fluid">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="layout-footer">
            © 2025 University Correspondence Portal | Clerk Dashboard
        </footer>
    </div>

    <!-- Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
