@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .layout-wrapper {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .layout-content {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            background-color: #f8f9fa;
        }

        .layout-footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 10px 0;
        }

        header {
            position: sticky;
            top: 0;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <div class="layout-wrapper">
        <!-- Header / Navbar -->
        <header class="d-flex justify-content-between align-items-center p-3 bg-primary text-white shadow">
            <div>
                <a href="@Url.Action("Report", "Admin")" class="btn btn-light">Admin Panel</a>
            </div>
            <div class="d-flex flex-wrap gap-2">
                <a href="@Url.Action("AddDepartment", "Admin")" class="btn btn-outline-light">Add Department</a>
                <a href="@Url.Action("AddStaff", "Admin")" class="btn btn-outline-light">Add Staff</a>
                <a href="@Url.Action("AddClerk", "Admin")" class="btn btn-outline-light">Add Clerk</a>
                <a href="@Url.Action("Report", "Admin")" class="btn btn-outline-light">Report</a>
                <a href="@Url.Action("Profile", "Admin")" class="btn btn-outline-light">Admin Profile</a>
                <a href="@Url.Action("Logout", "Admin")" class="btn btn-outline-light">Logout</a>
            </div>
        </header>

        <!-- Page Content -->
        <main class="layout-content container-fluid">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="layout-footer">
            © 2025 University Correspondence Portal | Admin Dashboard
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
