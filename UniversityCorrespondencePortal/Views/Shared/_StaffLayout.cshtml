@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Staff Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
            font-family: 'Segoe UI', sans-serif;
        }

        .layout-wrapper {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .layout-content {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            background-color: #f8f9fa;
        }

        .layout-footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 10px 0;
        }

        .btn-outline-light i {
            margin-right: 6px;
        }
    </style>
</head>
<body>
    <div class="layout-wrapper">
        <!-- Header / Navbar -->
        <header class="d-flex justify-content-between align-items-center p-3 bg-success text-white shadow">
            <div class="fw-bold">
                <i class="bi bi-person-workspace me-2"></i>Welcome Staff
            </div>
            <div>
                <a href="@Url.Action("InwardLetter", "Staff")" class="btn btn-outline-light me-2">
                    <i class="bi bi-envelope-paper"></i> InwardLetter
                </a>
                @*<a href="@Url.Action("OutwardLetter", "Staff")" class="btn btn-outline-light me-2">
                    <i class="bi bi-envelope-paper"></i> OutwardLetter
                </a>*@
                @*<a href="@Url.Action("Report", "Staff")" class="btn btn-outline-light me-2">
                    <i class="bi bi-bar-chart-line"></i> Report
                </a>*@
                <a href="@Url.Action("Profile", "Staff")" class="btn btn-outline-light me-2">
                    <i class="bi bi-person-circle"></i> Profile
                </a>
                <a href="@Url.Action("Login", "Staff")" class="btn btn-outline-light">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </header>

        <!-- Page Content -->
        <main class="layout-content container-fluid">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="layout-footer">
            © 2025 University Correspondence Portal | Staff Dashboard
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
