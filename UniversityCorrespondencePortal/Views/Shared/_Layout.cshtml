<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }
    </style>
</head>
<body>

    @* Header/Navbar *@
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-4">
        <a class="navbar-brand" href="#">UCP</a>

        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Clerk")">Clerk</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Staff")">Staff</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Admin")">Admin</a></li>
            </ul>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    @* Footer always sticks at the bottom *@
    <footer class="footer py-3 bg-light text-center">
        <div class="container">
            <span class="text-muted">© 2025 University Correspondence Portal. All Rights Reserved.</span>
        </div>
    </footer>

</body>
</html>